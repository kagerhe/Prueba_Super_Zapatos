
@{

    ViewBag.Pagina = "Store";
    ViewBag.Item = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">
                        <a href="javascript:void(0);" id="addnewStore" class="btn btn-info">
                            <i class="glyphicon glyphicon-plus"></i> Add New Store
                        </a>
                    </h3>
                </div>
                <div class="row" style="margin-top:0; min-height:0;">
                    <div class="content">
                        <style>
                            table tr > td:nth-child(1),
                            table tr > td:nth-child(2),
                            table tr > td:nth-child(5),
                            table tr > td:nth-child(4) {
                                text-align: center;
                            }

                            table tr > td:nth-child(3) {
                                text-align: left;
                            }
                        </style>
                        <div style="padding-left:15px; padding-right:15px">
                            <table id="listStore" class="table table-striped table-bordered nowrap" cellspacing="0" width="100">
                                <thead>
                                    <tr class="bg-danger" style="text-align:center">
                                        <th style="text-align:center; width:10%">Idn</th>
                                        <th style="text-align:center; width:30%">Name</th>
                                        <th style="text-align:center; width:30%">Address</th>
                                        <th style="text-align:center; width:30%">Action</th>
                                    </tr>
                                </thead>
                                <tbody id="table"></tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>


@*modal*@
<div class="modal" id="modal">
    <section style="display:none">
        <form id="formStore" class="form-horizontal">
            <div class="panel panel-primary">
                <div class="panel-body">
                    @Html.Hidden("id")

                    <div class="form-group">
                        @Html.Label("Name", new { @class = "control-label col-sm-3" })
                        <div class="col-sm-7">
                            @Html.TextBox("Name", new { @class = "control-label col-sm-3" })
                        </div>
                    </div>
                    <div class="form-group" style="padding-top:0">
                        @Html.Label("Address", new { @class = "control-label col-sm-3" })
                        <div class="col-sm-7">
                            @Html.TextBox("address", "", new { @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </section>

</div>
@*modal*@

@section script
{
    <script src="~/Scripts/alertify.min.js"></script>
    <script src="~/Scripts/store.js"></script>

}
